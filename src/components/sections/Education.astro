---
import Section from "../Section.astro";
import { education } from "../../cv.json";
---

<Section title="Education">
  <ul>
    {
      education.map(({ institution, area, startDate, endDate }) => {
        const startYear = new Date(startDate).getFullYear();
        const endYear =
          endDate != null ? new Date(endDate).getFullYear() : "Actual";
        const years = `${startYear} - ${endYear}`;
        return (
          <li>
            <article>
              <header>
                <h3>{institution}</h3>
                <time>{years}</time>
              </header>
              <footer>
                <p>{area}</p>
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 6px;
  }
  time {
    font-size: 0.85rem;
    color: #555;
  }
  article h3 {
    font-weight: 500;
    color: #111;
  }
  p {
    margin-bottom: 20px;
  }
</style>
