---
import Section from "../Section.astro";
import { work } from "../../cv.json";
---

<Section title="Experience">
  <ul>
    {
      work.map(({ name, position, startDate, endDate, summary }) => {
        const startYear = new Date(startDate).getFullYear();
        const endYear =
          endDate != null ? new Date(endDate).getFullYear() : "Actual";
        const years = `${startYear} - ${endYear}`;
        return (
          <li>
            <article>
              <header>
                <h3>{name}</h3>
                <time>{years}</time>
              </header>
              <footer>
                <h4>{position}</h4>
                <p>{summary}</p>
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 4px;
  }
  time {
    font-size: 0.85rem;
    color: #555;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  article h4 {
    font-weight: 400;
    color: #222;
  }
</style>
